# AI Traffic Management System - Environment Configuration
# Copy this file to .env and configure according to your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
TRAFFIC_APPLICATION_NAME="AI Traffic Management System"
TRAFFIC_APPLICATION_VERSION="2.0.0"
TRAFFIC_DEBUG_MODE=false
ENVIRONMENT=production

# =============================================================================
# API CONFIGURATION
# =============================================================================
TRAFFIC_API_HOST=0.0.0.0
TRAFFIC_API_PORT=8000
TRAFFIC_API_PREFIX=/api

# =============================================================================
# CORS SETTINGS
# =============================================================================
TRAFFIC_ALLOWED_ORIGINS="https://yourdomain.com,https://*.vercel.app,https://*.railway.app,https://*.render.com"
TRAFFIC_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
TRAFFIC_ALLOWED_HEADERS="*"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB (Optional - for analytics storage)
TRAFFIC_MONGODB_CONNECTION_STRING="mongodb://localhost:27017"
TRAFFIC_DATABASE_NAME="traffic_management"

# Redis (Optional - for caching and real-time features)
TRAFFIC_REDIS_CONNECTION_STRING="redis://localhost:6379"
TRAFFIC_REDIS_CACHE_TTL=3600

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# YOLOv8 Model Settings
TRAFFIC_MODEL_NAME="yolov8n.pt"
TRAFFIC_DETECTION_CONFIDENCE_THRESHOLD=0.4
TRAFFIC_NON_MAX_SUPPRESSION_THRESHOLD=0.45
TRAFFIC_ENABLE_GPU_ACCELERATION=false
TRAFFIC_MODEL_CACHE_DIRECTORY="./models"

# =============================================================================
# TRAFFIC MANAGEMENT SETTINGS
# =============================================================================
# Signal Timing (in seconds)
TRAFFIC_DEFAULT_GREEN_SIGNAL_DURATION=30
TRAFFIC_YELLOW_SIGNAL_DURATION=3
TRAFFIC_MINIMUM_GREEN_DURATION=10
TRAFFIC_MAXIMUM_GREEN_DURATION=120

# Emergency Response
TRAFFIC_EMERGENCY_OVERRIDE_DURATION=60
TRAFFIC_EMERGENCY_DETECTION_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
TRAFFIC_LOG_LEVEL=INFO
TRAFFIC_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
TRAFFIC_ENABLE_FILE_LOGGING=true
TRAFFIC_LOG_FILE_PATH="./logs/traffic_system.log"

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
TRAFFIC_MAX_CONCURRENT_REQUESTS=100
TRAFFIC_REQUEST_TIMEOUT_SECONDS=30
TRAFFIC_WEBSOCKET_HEARTBEAT_INTERVAL=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Configuration (Optional)
TRAFFIC_JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
TRAFFIC_JWT_ALGORITHM="HS256"
TRAFFIC_JWT_EXPIRATION_HOURS=24

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================

# Vercel
# VERCEL_URL=your-vercel-deployment-url

# Railway
# RAILWAY_STATIC_URL=your-railway-deployment-url
# PORT=8000

# Render
# RENDER_EXTERNAL_URL=your-render-deployment-url

# Heroku
# HEROKU_APP_NAME=your-heroku-app-name

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Enable analytics features
TRAFFIC_ENABLE_ANALYTICS=true
TRAFFIC_ANALYTICS_RETENTION_DAYS=30

# Monitoring endpoints
TRAFFIC_ENABLE_PROMETHEUS_METRICS=false
TRAFFIC_PROMETHEUS_PORT=9090

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# These are used by the frontend build process
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_MAPBOX_TOKEN=your-mapbox-token-here
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development environment
TRAFFIC_ENABLE_CORS_ALL_ORIGINS=true
TRAFFIC_ENABLE_SWAGGER_DOCS=true
TRAFFIC_ENABLE_HOT_RELOAD=true

# Test database
TRAFFIC_TEST_DATABASE_NAME="traffic_management_test"

# =============================================================================
# HARDWARE INTEGRATION (Optional)
# =============================================================================
# Arduino/Hardware Integration
TRAFFIC_ENABLE_HARDWARE_INTEGRATION=false
TRAFFIC_ARDUINO_PORT="COM3"
TRAFFIC_ARDUINO_BAUD_RATE=9600

# IoT Device Settings
TRAFFIC_ENABLE_IOT_SENSORS=false
TRAFFIC_IOT_MQTT_BROKER="mqtt://localhost:1883"
TRAFFIC_IOT_DEVICE_TOKEN="your-iot-device-token"
